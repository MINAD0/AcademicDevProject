@model List<Project>


<partial name="_Notification" />

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
    <ol class="breadcrumb  bg-transparent">
        <li class="breadcrumb-item"><a href="#">Project Management</a></li>
        <li class="breadcrumb-item active">Projects</li>
    </ol>
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Projects List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Project" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Project
                </a>
            </div>

        </div>


        <table id="tblData" class="table table-hover table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Project Name</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.PrjName</td>
                        <td>@obj.Description</td>
                        <td>@obj.Image</td>
                        <td>@obj.GithubLink</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Project" asp-action="Upsert" asp-route-id="@obj.ProjectId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Project" asp-route-id="@obj.ProjectId" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}